FROM us.icr.io/dia-registry/devops/build-122:latest as build

WORKDIR $GOPATH/src/

COPY ./cmd/services/filtersBlockService ./
RUN go mod tidy && GOOS=linux GOARCH=amd64 CGO_ENABLED=0 go install

FROM gcr.io/distroless/base

COPY --from=build /go/bin/filtersBlockService /bin/filtersBlockService
COPY --from=build /config/ /config/

CMD ["filtersBlockService"]