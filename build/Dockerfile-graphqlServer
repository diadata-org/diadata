FROM us.icr.io/dia-registry/devops/build-119:latest as build

WORKDIR $GOPATH/src/
COPY ./cmd/http/graphqlServer ./
COPY ./cmd/http/graphqlServer/schema ./schema/

RUN go mod tidy -go=1.16 && go mod tidy -go=1.17 && GOOS=linux GOARCH=amd64 CGO_ENABLED=0 go install

FROM gcr.io/distroless/base

COPY --from=build /go/bin/graphqlServer /bin/graphqlServer
COPY ./cmd/http/graphqlServer/schema/ /schema/

CMD ["graphqlServer"]

