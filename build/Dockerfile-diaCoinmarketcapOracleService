FROM golang:1.14 as build

WORKDIR $GOPATH/src/

COPY . .

WORKDIR $GOPATH/src/github.com/diadata-org/diadata/cmd/blockchain/ethereum/diaCoinmarketcapOracleService

RUN go install

FROM gcr.io/distroless/base

COPY --from=build /go/bin/diaCoinmarketcapOracleService /bin/diaCoinmarketcapOracleService

ENTRYPOINT ["diaCoinmarketcapOracleService"]
